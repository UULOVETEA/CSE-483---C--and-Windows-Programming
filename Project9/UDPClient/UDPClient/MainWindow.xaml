<Window x:Class="UDPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPClient"
        mc:Ignorable="d"
        Title="UDP Client" Height="260" Width="450">
    <Grid>
        <Label x:Name="Message_Label" Content="Message" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Status_Label" Content="Status" HorizontalAlignment="Left" Margin="30,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Message_TextBox" HorizontalAlignment="Left" Height="23" Margin="30,41,0,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="Status_TextBox" HorizontalAlignment="Left" Height="85" Margin="30,121,0,0" TextWrapping="Wrap" Text="{Binding Status}" VerticalAlignment="Top" Width="385"/>
        <Button x:Name="Send_Button" Content="Send" HorizontalAlignment="Left" Margin="340,44,0,0" VerticalAlignment="Top" Width="75" Click="Send_Button_Click"/>
    </Grid>
</Window>
